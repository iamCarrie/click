    <section class="divineA-bg relative flex justify-center items-center overflow-hidden p:h-[795px] tm:h-[398px]">
      <small
        class="hand right absolute z-[2] p:w-[400px] p:h-[545px] p:top-[180px] p:right-[80px] tm:w-[220px] tm:h-[350px] tm:top-[80px] tm:right-[30px]"></small>
